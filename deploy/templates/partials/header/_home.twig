{# Entry object #}

{# Background image #}
{# Title #}
{# Subheading #}
{# Clients -> _clients #}

<header class="container mb-8" style="background: url('/assets/img/bg-grid-large-3.png'), rgba(15, 23, 42, 1);background-size: contain; background-position: bottom; background-repeat: no-repeat">
  <div class="row">

      <div class="flex items-end">
        <div class="max-w-[900px] flex flex-col items-start mt-[80px]">
          <span class="tag relative py-2 px-4 bg-orange-25 border border-orange text-orange font-semibold font-inter body-sm rounded-full text-center uppercase tracking-heading" data-sal="slide-up" style="--sal-duration: 0.75s; --sal-delay: 0.75s;">available for work</span>
          <h1 class="my-4 text-white font-extrabold font-inter-tight h1 tracking-body" data-sal="slide-up" style="--sal-duration: 0.75s; --sal-delay: 1s;">
            {% if entry.altTitle %}
              {{ entry.altTitle}}
            {% else %}
              {{ entry.title}}
            {% endif %}
          </h1>
          {% if entry.subheading %}
            <h2 class="h2 text-white font-bold font-inter-tight tracking-body opacity-50" data-sal="slide-up" style="--sal-duration: 0.75s; --sal-delay: 1.25s;">
              {{entry.subheading}}
            </h2>
          {% endif %}
          {% if entry.clients %}
            <div class="flex flex-col mt-20" data-sal="slide-up" style="--sal-duration: 0.75s; --sal-delay: 1.5s;">
              <div>
                {% include 'partials/components/_label' with {
                  'text': "trusted by"
                } only %}
              </div>


              <div class="flex flex-row items-center -mx-8 mt-4">
                {% for item in entry.clients.all() %}
                  <div class="px-8">
                    {{ svg( item.logo.one())}}
                  </div>
                {% endfor %}
              </div>
            </div>
          {% endif %}

        </div>
      </div>
    </div>
</header>