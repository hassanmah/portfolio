{% extends "_layout.twig" %}

{% block content %}
  {% include 'partials/header/_text' with {
    'entry': entry
  } only %}


  <div class="container-blocks-sm">
    <div class="row">
      <div class="flex flex-row flex-wrap justify-between -mx-4">
          <div class="w-full md:w-1/2 mlg:w-1/3 mb-12 md:mb-0 px-4 flex flex-col items-start">
            <div>
              <div class="mb-nav">
                {% if contact.buildingNumberName %}
                  <p class="font-light font-sans body-md">{{ contact.buildingNumberName}}, </p>
                {% endif %}

                {% if contact.addressLine1 %}
                  <p class="font-light font-sans body-md">{{ contact.addressLine1}}, </p>
                {% endif %}

                {% if contact.addressLine2 %}
                  <p class="font-light font-sans body-md">{{ contact.addressLine2}}, </p>
                {% endif %}

                {% if contact.city %}
                  <p class="font-light font-sans body-md">{{ contact.city}}, </p>
                {% endif %}

                {% if contact.postCode %}
                  <p class="font-light font-sans body-md">{{ contact.postCode}}</p>
                {% endif %}
              </div>
              <div>
                {% if contact.telephoneNumber %}
                  <p class="font-light font-sans body-md">
                    {{ contact.telephoneNumber }}
                  </p>
                {% endif %}

                {% if contact.emailAddress %}
                  <a aria-label="Email" href="mailto:{{ contact.emailAddress }}" class="font-light font-sans body-md underline">
                    {{ contact.emailAddress }}
                  </a>
                {% endif %}

              </div>

              {% if entry.button %}
                <div class="mt-mobile-md md:mt-desktop-md">
                  <a {% if entry.button.ariaLabel %}aria-label="{{ entry.button.ariaLabel }}"{% endif %} {% if entry.button.title %}title="{{ entry.button.title }}"{% endif %} class="button__spacing bg-white w-full md:w-[auto] text-black font-sans font-light text-16 px-8 py-4 mt-small flex flex-row justify-center items-center border border-black-light hover:bg-black hover:text-white" href="{{ entry.button }}" {% if entry.button.target %}target="{{ entry.button.target }}"{% endif %} >
                    {{ entry.button.customText }}
                    <svg width="13" height="10" class="ml-2" viewBox="0 0 13 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path fill-rule="evenodd" clip-rule="evenodd" d="M0 5C0 4.5399 0.372981 4.16692 0.833077 4.16692H9.11077L6.66765 1.77725C6.32977 1.44676 6.33019 0.902905 6.66859 0.572933V0.572933C6.99547 0.254194 7.51686 0.254174 7.84376 0.572889L12.3846 5L7.84376 9.42711C7.51686 9.74583 6.99547 9.74581 6.66859 9.42707V9.42707C6.33019 9.0971 6.32977 8.55324 6.66765 8.22275L9.11077 5.83308H0.833075C0.37298 5.83308 0 5.4601 0 5V5Z" fill="#838383"/>
                    </svg>

                  </a>
                </div>

              {% endif %}

            </div>



          </div>
          <div class="w-full md:w-1/2 px-4">
            {% set form = craft.formie.forms({ handle: 'contact' }).collect().first() %}

            {% if form %}
              <h2 class="font-serif italic text-grey-mid heading-sm mb-small">We are here to help</h2>

              <div class="formie__form">
                {{ craft.formie.renderForm(form) }}
              </div>
            {% endif %}
          </div>

      </div>
    </div>
  </div>
{% endblock %}

